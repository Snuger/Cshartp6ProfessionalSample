@page
@model RazorPageSample.Pages.Produces.IndexModel
@{
    ViewData["Title"] = "产品管理";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="row">
    <form method="get" class="col-md-10 float-md-left">
        <div class="form-row align-items-center">
            <div class="col-auto">
                <label class="sr-only" asp-for="SearchString">名称</label>
                <input type="text" asp-for="SearchString" class="form-control mb-2" />
            </div>
            <div class="col-auto">
                <input type="submit" class="btn btn-primary mb-2" value="检索" />
            </div>
        </div>
    </form>
    <div class="col-md-2 text-right">
        <a asp-page="Create">增加新产品</a>
    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(Model => Model.Product[0].Id)
            </th>
            <th>
                @Html.DisplayNameFor(Model => Model.Product[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(Model => Model.Product[0].Discretion);
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Product)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Id)</td>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Discretion)</td>
                <td class="text-right">
                    <a asp-page="./edit" asp-route-id="@item.Id">编辑</a>|
                    <a asp-page="./details" asp-route-id="@item.Id">详情</a>|
                    <a asp-page="./delete" asp-route-id="@item.Id">删除</a>
                </td>
            </tr>
        }
    </tbody>
</table>