@page
@model RazorPageSample.Pages.Products.EditModel
@{
    ViewData["Title"] = "编辑产品";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-sm-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" ></div>
            <input type="hidden" asp-for="@Model.Product.Id"  />
            <div class="form-group">
                <label asp-for="@Model.Product.Name" class="control-label"></label>
                <input asp-for="@Model.Product.Name" class="form-control" />
                <span asp-validation-for="@Model.Product.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Product.Discretion" class="control-label"></label>
                <input asp-for="@Model.Product.Discretion" class="form-control" />
                <span asp-validation-for="@Model.Product.Discretion" class="text-danger"></span>
            </div>
            <input type="submit" class="btn btn-primary" value="提交" />
        </form>
    </div>
</div>

