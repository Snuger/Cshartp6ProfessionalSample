@model MvcApplicationSample.Models.Menu
@{
    ViewData["Title"] = "CreateMenus2";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<fieldset>
    <legend>Menu</legend>
    <form action="/SubmitData/CreateMenu2" method="post">
        <div class="form-group">
            <label>id:</label>
            <input type="text" class="form-control" name="id" value="" />
        </div>
        <div class="form-group">
            <label>text</label>
            <input type="text" class="form-control" name="text" value="" />
        </div>
        <div class="form-group">
            <label>price</label>
            <input type="number" class="form-control" name="price" value="" />
        </div>
        <div class="form-group">
            <label>Category</label>
            <input type="tel" class="form-control" name="category" value="" />
        </div>
        <button type="submit">提交</button>
    </form>    
</fieldset>

<br />

<fieldset>
    <legend>表单二</legend>
    @using (Html.BeginForm("SubmitData", "CreateMenu2", "post"))
    {
        <div class="form-group">
            @Html.LabelFor(model=>model.Text)
            @Html.TextBoxFor(model => model.Text, new {required="required", @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(model=>model.Price)
            @Html.TextBoxFor(model=>model.Price,new {@class= "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m=>m.Category)
            @Html.TextBoxFor(m => m.Category, new {@class="form-control" })
        </div>
    }
</fieldset>