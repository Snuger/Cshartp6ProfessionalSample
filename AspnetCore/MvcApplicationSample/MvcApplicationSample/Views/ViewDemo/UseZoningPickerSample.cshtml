
@{
    ViewData["Title"] = "UseZoningPickerSample";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <form>
        <div class="form-group">
            <label>用户名</label>
            <input type="text" class="form-control" name="name" value="请输入用户名" />
        </div>
        <div class="form-group">
            <label>电话</label>
            <input type="tel" class="form-control" name="tel" value="请输入电话号码" />
        </div>
        <div class="form-group">
            <label>居住地址</label>
            @await Component.InvokeAsync("ZoningPicker", 0);
        </div>
    </form>
</div>
