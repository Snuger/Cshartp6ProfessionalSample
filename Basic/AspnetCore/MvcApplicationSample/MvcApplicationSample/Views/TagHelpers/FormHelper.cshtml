@model MvcApplicationSample.Models.Menu
@{
    ViewData["Title"] = "FormHelper";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<fieldset>
    <legend>Menu</legend>

    <form method="post" asp-action="FormHelper">
        <div class="form-group">
            <label asp-for="Id"></label>
            <input asp-for="Id" class="form-control" placeholder="菜单标识" />
        </div>
        <div class="form-group">
            <label asp-for="Text"></label>
            <input asp-for="Text" class="form-control" placeholder="请输入书名" />
        </div>
        <div class="form-group">
            <label asp-for="Price"></label>
            <input asp-for="Price" class="form-control" placeholder="价钱" />
        </div>
        <div class="form-group">
            <label asp-for="CreateDate"></label>
            <input asp-for="CreateDate" class="form-control" type="date" placeholder="发版时间" />
        </div>
        <div class="form-group">
            <label asp-for="Category"></label>
            <input asp-for="Category" class="form-control" placeholder="分类" />
        </div>
        <div class="bg-warning">
            <div><span asp-validation-for="Id"></span> </div>
            <div><span asp-validation-for="Text"></span></div>
            <div><span asp-validation-for="Price"></span></div>
            <div><span asp-validation-for="Category"></span></div>
        </div>
        <button type="submit">提交</button>
    </form>
</fieldset>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>

